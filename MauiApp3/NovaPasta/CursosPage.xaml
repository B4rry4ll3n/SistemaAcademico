<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.NovaPasta.CursosPage"
             Title="Cursos">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="menu.png" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Padding="10" Spacing="20">
        <Image Source="cursos_icon.png" HeightRequest="100" HorizontalOptions="Center" />
        <Entry x:Name="CurNomeEntry" Placeholder="Nome do Curso" />
        <Entry x:Name="CurSiglaEntry" Placeholder="Sigla do Curso" />
        <Editor x:Name="CurObservacoesEditor" Placeholder="Observações" HeightRequest="100" />
        <Entry x:Name="PerIdEntry" Placeholder="ID do Período" Keyboard="Numeric" />
        <Button Text="Inserir" Clicked="OnInsertClicked" />
        <Button Text="Atualizar" Clicked="OnUpdateClicked" />
        <Button Text="Ler Dados" Clicked="OnReadClicked" />
        <Button Text="Deletar" Clicked="OnDeleteClicked" />
    </VerticalStackLayout>
</ContentPage>